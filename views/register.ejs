<body>
    
    <article>
    <h1>Sign up</h1>
    <p>Have an Account?</p><a href="./login">Login</a>
    </article>

    <div id="container">
    <form method="post" enctype='multipart/form-data'>
        <div>
            <label for="name">Enter your username</label>
            <input
            type="text"
            name="name"
            id="name"
            placeholder="username"
                required>   
            
            <label for="email">Enter your email</label>
            <input 
            type="email" 
            name="email" 
            id="email" 
            placeholder="email"
            required>
            
            <label for="password">Enter you Password</label>
            <input
            type="password"
            name="password"
            id="password"
            placeholder="Password"
            required>
        </div>
        <button type="submit">Create account</button>    
    </form>
    </div>
</body>
